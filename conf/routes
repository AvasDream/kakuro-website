# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Website calls
GET         /games/kakuro                    controllers.KakuroController.kakuro
GET         /games/kakuro/rules              controllers.KakuroController.rules

GET         /games/snake                     controllers.SnakeController.snake

# API calls
GET         /api/kakuro/initgame             controllers.KakuroController.initGame
GET         /api/kakuro/set/:row/:col/:value controllers.KakuroController.setValue(row: Int, col: Int, value: Int)
GET         /api/kakuro/delete/:row/:col     controllers.KakuroController.deleteValue(row: Int, col: Int)
GET         /api/kakuro/undo                 controllers.KakuroController.undo
GET         /api/kakuro/redo                 controllers.KakuroController.redo
GET         /api/kakuro/save                 controllers.KakuroController.save
GET         /api/kakuro/load                 controllers.KakuroController.load
# Home page
GET         /                                controllers.ApplicationController.index
GET         /signOut                         controllers.ApplicationController.signOut
GET         /authenticate/:provider          controllers.SocialAuthController.authenticate(provider)

GET         /signUp                          controllers.SignUpController.view
POST        /signUp                          controllers.SignUpController.submit

GET         /signIn                          controllers.SignInController.view
POST        /signIn                          controllers.SignInController.submit

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
GET         /webjars/*file                   controllers.WebJarAssets.at(file)
